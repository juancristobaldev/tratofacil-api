generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

////////////////////
/// ENUMS
////////////////////

enum Role {
  CLIENT
  PROVIDER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentProvider {
  WEBPAY
  MERCADOPAGO
}

enum PaymentStatus {
  INITIATED
  CONFIRMED
  FAILED
}

////////////////////
/// MODELS
////////////////////

/// Usuarios (wp_users)
model User {
  id              Int      @id @default(autoincrement()) @map("ID")
  username        String   @unique @map("user_login")
  email           String   @unique @map("user_email")
  password        String   @map("user_pass")
  displayName     String   @map("display_name")
  role            Role?    @default(CLIENT)
  isEmailVerified Boolean? @default(false)

  orders   Order[]   @relation("ClientOrders")
  provider Provider?

  createdAt DateTime  @default(now()) @map("user_registered")
  updatedAt DateTime? @updatedAt

  usermeta UserMeta[]

  @@map("wp_users")
}

/// Metadatos de usuarios (wp_usermeta)
model UserMeta {
  id     Int     @id @default(autoincrement()) @map("umeta_id")
  userId Int     @map("user_id")
  key    String? @map("meta_key") // Agregado '?' por seguridad
  value  String? @map("meta_value") // Agregado '?' para evitar el error de datos NULL

  user User @relation(fields: [userId], references: [id])

  @@map("wp_usermeta")
}

/// Proveedores (APP)
model Provider {
  id       Int     @id @default(autoincrement())
  name     String
  location String?
  logoUrl  String?

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])

  bank     BankAccount?
  services Service[]

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

/// Cuenta bancaria del proveedor (APP)
model BankAccount {
  id            Int    @id @default(autoincrement())
  bankName      String
  accountNumber String
  accountType   String

  providerId Int      @unique
  provider   Provider @relation(fields: [providerId], references: [id])

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

/// Categorías principales (wp_terms)
model Category {
  id          Int     @id @default(autoincrement()) @map("term_id")
  name        String  @map("name")
  slug        String  @unique @map("slug")
  description String?

  services Service[]

  parentId Int? @map("parent")
}

/// Subcategorías → servicios (wp_terms mapeados como servicios)
model Service {
  id          Int     @id @default(autoincrement()) @map("term_id")
  name        String  @map("name")
  slug        String  @unique @map("slug")
  description String?

  categoryId Int      @map("parent")
  category   Category @relation(fields: [categoryId], references: [id])

  providerId Int?
  provider   Provider? @relation(fields: [providerId], references: [id])

  products Product[]
}

/// Productos (wp_posts)
model Product {
  id          Int     @id @default(autoincrement()) @map("ID")
  name        String  @map("post_title")
  description String? @map("post_content")
  price       Float?
  netAmount   Float?
  commission  Float?

  serviceId Int?
  service   Service? @relation(fields: [serviceId], references: [id])

  orders Order[]

  createdAt DateTime @default(now()) @map("post_date")
  updatedAt DateTime @updatedAt @map("post_modified")

  postmeta PostMeta[]

  @@map("wp_posts")
}

model PostMeta {
  id     Int     @id @default(autoincrement()) @map("meta_id")
  postId Int     @map("post_id")
  key    String  @map("meta_key")
  value  String? @map("meta_value") // <--- Agrega el '?' aquí

  product Product @relation(fields: [postId], references: [id])

  @@map("wp_postmeta")
}

/// Pedidos (APP)
model Order {
  id       Int  @id @default(autoincrement())
  clientId Int
  client   User @relation("ClientOrders", fields: [clientId], references: [id])

  productId Int
  product   Product @relation(fields: [productId], references: [id])

  status OrderStatus @default(PENDING)
  total  Float?

  payment Payment?

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

/// Pagos (APP)
model Payment {
  id       Int             @id @default(autoincrement())
  orderId  Int             @unique
  order    Order           @relation(fields: [orderId], references: [id])
  amount   Float
  provider PaymentProvider
  status   PaymentStatus   @default(INITIATED)

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

/// Verificación de correo (APP)
model EmailVerification {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  code      String
  expiresAt DateTime
  createdAt DateTime? @default(now())
}
